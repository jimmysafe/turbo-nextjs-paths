{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@payload-types": [
        "../admin/src/payload-types.ts"
      ]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "../../packages/shared/src/generated/schema.graphql"
      },
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
